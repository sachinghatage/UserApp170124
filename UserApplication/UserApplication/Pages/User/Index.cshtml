@page
@model UserApplication.Pages.User.IndexModel
@{
}

<form method="post">
    
    <div class="row mb-sm-3">
        <div class="col-sm-3">
            <label>Name :</label>
        </div>
        <div class="col-sm-3">
            <input type="text" name="Name" value="@Model.user.Name" class="form-control"/>
       </div>
    </div>
    <div class="row mb-md-3">
        <div class="col-md-3">
            <label>Email :</label>
        </div>
        <div class="col-md-3">
            <input type="email" name="Email" value="@Model.user.Email"  class="form-control"/>
        </div>
    </div>
    <div class="row mb-md-3">
        <div class="col-md-3">
        <label>Phone :</label>
        </div>
        <div class="col-md-3">
            <input type="number" name="Phone" value="@Model.user.Phone" class="form-control"/>
        </div>
    </div>
    <div class="row mb-md-3">
        <div class="col-md-3 text-center">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
